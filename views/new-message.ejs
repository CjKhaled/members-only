<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Members Only</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </head>
  <body style="padding: 0; margin: 0">
    <div
      class="container-fluid d-flex flex-column align-items-center"
      style="min-height: 100vh"
    >
      <h1 class="mb-5 mt-5">Create A New Message</h1>
      <%- include('./partials/errors.ejs') %>
      <form
        action="/messages/new-message"
        class="d-flex flex-column align-items-center"
        method="post"
        id="new-message"
        novalidate
      >
        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            placeholder="Pass Code"
            minlength="1"
            maxlength="50"
            required
          />
          <label for="title">Message Title</label>
          <div class="invalid-feedback">
            Title must be between 1 and 30 characters.
          </div>
        </div>
        <div class="form-floating mb-3">
          <textarea
            style="resize: none"
            name="message"
            id="message"
            placeholder="message"
            rows="10"
            minlength="10"
            maxlength="300"
            required
          ></textarea>
          <label for="message">Message</label>
          <div class="invalid-feedback">
            Message must be between 10 and 300 characters.
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </body>
</html>

<script>
  const newMessageForm = document.querySelector("form#new-message");

  newMessageForm.addEventListener("submit", (e) => {
    if (!newMessageForm.checkValidity()) {
      e.preventDefault();
    }

    newMessageForm.classList.add("was-validated");
  });
</script>
